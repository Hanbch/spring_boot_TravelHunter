<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="edu.hi.prj.mapper.UserMapper">
    
	<resultMap id="userMap" type="UserVO">
		<id property="username" column="username"/>
		<result property="password" column="password"/>
		<result property="enabled" column="enabled"/>
		<collection property="authList" resultMap="authMap"></collection>	
	</resultMap>
    
    <resultMap id="authMap" type="AuthVO">
	    <result property="username" column="username"/>
	    <result property="authority" column="authority"/>	
	</resultMap>
    
    <select id="getUser" resultMap="userMap">
    	<![CDATA[
        	select id username, mpw password, member_id username, aname authority  from member m, authority a, authgroup ag 
        		where m.id = a.member_id and a.auth_num = ag.num and m.id = #{username}
    	]]>
    </select>
    
</mapper>